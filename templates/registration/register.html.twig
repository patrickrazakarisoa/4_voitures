{% extends 'base.html.twig' %}

{% block title %}S'incrire{% endblock %}
{% block monTitre %}Espace d'inscription{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    {{ form_start(registrationForm, { 'attr': { 'class': 'card m-auto mt-3 p-3', 'style': 'width:30%'}}) }}
        {# {{ form_label(registrationForm.username, 'Your name', { 'attr': { 'style': 'color:black'}}) }} #}
        {{ form_row(registrationForm.username)}}
        {{ form_row(registrationForm.email, {
            label: 'Adresse email'
        }) }}
        {{ form_row(registrationForm.password, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.verifpassword, {
            label: 'Confirmer mot de passe'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}
    {{ form_end(registrationForm) }}
{% endblock %}
